<?xml version="1.0"?>
<config>
    <modules>
        <Boolfly_Adminhtml>
            <version>0.1.0</version>
        </Boolfly_Adminhtml>
    </modules>
    <global>
        <models>
            <boolfly_adminhtml>
                <class>Boolfly_Adminhtml_Model</class>
            </boolfly_adminhtml>
        </models>
        <blocks>
            <adminhtml>
                <rewrite>
                    <sales_order_grid>Boolfly_Adminhtml_Block_Sales_Order_Grid</sales_order_grid>
                </rewrite>
            </adminhtml>
        </blocks>
    </global>
    <adminhtml>
        <events>
            <core_block_abstract_prepare_layout_before>
                <observers>
                    <grid_column_append>
                        <type>model</type>
                        <class>Boolfly_Adminhtml_Model_Observer</class>
                        <method>appendColumn</method>
                    </grid_column_append>
                </observers>
            </core_block_abstract_prepare_layout_before>
        </events>
    </adminhtml>
</config>